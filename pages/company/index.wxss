.nav {
    position: relative;
    height: 45px;
    line-height: 45px;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: #fff;
}

.nav-title {
    height: 45px;
    line-height: 45px;
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 36rpx;
    color: #000;
}

.nav .back {
    position: absolute;
    left: 20rpx;
    top: 50%;
    height: 48rpx;
    bottom: 0;
}
.nav .back image {
    display: block;
    width: 38rpx;
    height: 38rpx;
}

.overflow {
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 50rpx 30rpx;
    background: #f6f6f6;
}

.hidden {
    overflow: hidden;
}

.container {
    background: #ffffff;
    padding: 35rpx 30rpx;
}

.container view {
    min-height: 50rpx;
    line-height: 60rpx;
    display: flex;
    width: 100%;
}
.container view text:first-child {
    color: #333;
    font-size: 30rpx;
    text-align: right;
    margin-right: 15rpx;
    width: 150rpx;
}
.container view text:last-child {
    color: #666;
    font-size: 28rpx;
    flex: 1;
}