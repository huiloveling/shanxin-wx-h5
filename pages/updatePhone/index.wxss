.nav {
    position: relative;
    height: 45px;
    line-height: 45px;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: #fff;
}

.nav-title {
    height: 45px;
    line-height: 45px;
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 36rpx;
    color: #000;
}

.nav .back {
    position: absolute;
    left: 20rpx;
    top: 50%;
    height: 48rpx;
    bottom: 0;
}

.nav .back image {
    display: block;
    width: 38rpx;
    height: 38rpx;
}

.overflow {
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 50rpx 30rpx;
    background: #f6f6f6;
}

.hidden {
    overflow: hidden;
}


.view-container {
    background: #fff;
    border-radius: 20rpx;
    padding: 0 80rpx 0 0;
}
.original-phone, .new-phone, .msg-code {
    height: 88rpx;
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.original-phone text, .new-phone text, .msg-code text {
    width: 150rpx;
    line-height: 88rpx;
    text-align: right;
    font-size: 28rpx;
    margin-right: 30rpx;
}

.original-phone input, .new-phone input, .msg-code input {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #999;
    padding: 0 30rpx;
    box-sizing: border-box;
    border: 1px solid #888;
    flex: 1;
}
.original-phone view.sel {
    flex: 1;
    display: flex;
    align-items: center;
}
.select {
    width: 100%;
    height: 60rpx;
}

.msg-code {
    display: flex;
}

.msg-code input {
    width: 400rpx;
}
.msg-code .msg-btn {
    flex: 1;
    background: #f6f6f6;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 30rpx;
    box-sizing: border-box;
}
.msg-code .msg-btn view {
    min-width: 177rpx;
    height: 56rpx;
    background: #F87132;
    color: #fff;
    font-size: 28rpx;
    line-height: 56rpx;
    text-align: center;
    padding: 0 10rpx;
}


.btn {
    background: rgba(22, 155, 213, 1);
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    color: #fff;
    font-size: 35rpx;
    margin-top: 150rpx;
}