.nav {
    position: relative;
    height: 45px;
    line-height: 45px;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: #fff;
}

.nav-title {
    height: 45px;
    line-height: 45px;
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 36rpx;
    color: #000;
}

.nav .back {
    position: absolute;
    left: 20rpx;
    top: 50%;
    height: 48rpx;
    bottom: 0;
}

.nav .back image {
    display: block;
    width: 38rpx;
    height: 38rpx;
}

.overflow {
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 50rpx 30rpx;
    background: #f6f6f6;
}

.hidden {
    overflow: hidden;
}

.view-list {
    background: #fff;
    padding: 0 30rpx;
    border-radius: 20rpx;
}

.view-list-item {
    display: flex;
    border-bottom: 1px solid #f5f5f5;
    padding: 30rpx 0;
}
.view-list-item:last-child {
    border: none;
}

.view-list-item .img {
    display: flex;
    align-items: center;
    margin-right: 20rpx;
}

.view-list-item .img image {
    display: block;
    width: 41rpx;
    height: 53rpx;
}

.title {
    flex: 1;
    display: flex;
    color: #333;
    font-size: 28rpx;
    font-family: 'PingFang-SC-Medium';
    height: 53rpx;
    line-height: 53rpx;
}
.title view {
    flex: 1;
}
.title view:last-child {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.title view:last-child image {
    width: 15rpx;
    height: 22rpx;
}