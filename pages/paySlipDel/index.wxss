.nav {
    position: relative;
    height: 45px;
    line-height: 45px;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: #fff;
}

.nav-title {
    height: 45px;
    line-height: 45px;
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 36rpx;
    color: #000;
}

.nav .back {
    position: absolute;
    left: 20rpx;
    top: 50%;
    height: 48rpx;
    bottom: 0;
}

.nav .back image {
    display: block;
    width: 38rpx;
    height: 38rpx;
}

.overflow {
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx;
}

.hidden {
    overflow: hidden;
}

.view-list {
    border: 1px solid #ccc;
}

.view-list-item {
    display: flex;
    color: #333;
    font-size: 28rpx;
    font-family: 'PingFang-SC-Medium';
    line-height: 88rpx;
    text-align: left;
    border-bottom: 1px solid #ccc;
}

.view-list-item:last-child {
    border: none;
}

.view-list-item view {
    flex: 1;
    box-sizing: border-box;
    padding: 0 20rpx;
    width: 50%;
}

.view-list-item view:first-child {
    border-right: 1px solid #ccc;
}

.van-loading {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 99;
    display: flex;
    align-items: center;
    justify-content: center;
}
