.nav {
    position: relative;
    height: 45px;
    line-height: 45px;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: #fff;
}

.nav-title {
    height: 45px;
    line-height: 45px;
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 36rpx;
    color: #000;
}

.nav .back {
    position: absolute;
    left: 20rpx;
    top: 50%;
    height: 48rpx;
    bottom: 0;
}

.nav .back image {
    display: block;
    width: 38rpx;
    height: 38rpx;
}

.overflow {
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 50rpx 30rpx;
    background: #f6f6f6;
}

.hidden {
    overflow: hidden;
}
.canvas {
    display: none;
}
.container-wapr {
    background: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
    box-sizing: border-box;
}

.container-wapr .item {
    border-bottom: 1px solid #f5f5f5;
    font-family: 'PingFang-SC-Medium';
    padding-bottom: 15rpx;
    margin-bottom: 40rpx;
    font-weight: Medium;
}

.container-wapr .item view:nth-child(1) {
    margin-bottom: 20rpx;
    font-size: 35rpx;
    color: #333;
}

.container-wapr .item view:nth-child(2) {
    color: #666;
    font-size: 30rpx;
}

.container-wapr .item view:nth-child(2) input {
    border: 1px solid #f5f5f5;
}

.container-wapr .item view:nth-child(2).code {
    display: flex;
}

.container-wapr .item view:nth-child(2).code view {
    min-width: 177rpx;
    line-height: 56rpx;
}

.container-wapr .item view:nth-child(2).code view image {
    display: block;
    height: 56rpx;
    width: 100%;
}

.container-wapr .item view:nth-child(2).code input {
    flex: 1;
    margin-right: 30rpx;
}

.treaty {
    margin-top: 30rpx;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.custom-class {
    font-size: 25rpx;
    color: #999;
}

.bank-btn {
    margin-top: 50rpx;
}

.bank-btn form {
    display: block;
    width: 100%;
    height: 100%;
}

.bank-btn form button {
    display: block;
    width: 100%;
    height: 100%;
    padding: 0;
}

.bank-btn form button image {
    display: block;
    height: 88rpx;
    width: 100%;
}
