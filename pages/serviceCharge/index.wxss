.nav {
    position: relative;
    height: 45px;
    line-height: 45px;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: #fff;
}

.nav-title {
    height: 45px;
    line-height: 45px;
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 36rpx;
    color: #000;
}

.nav .back {
    position: absolute;
    left: 20rpx;
    top: 50%;
    height: 48rpx;
    bottom: 0;
}

.nav .back image {
    display: block;
    width: 38rpx;
    height: 38rpx;
}

.overflow {
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 50rpx 30rpx;
    background: #f6f6f6;
}

.hidden {
    overflow: hidden;
}

.container {
    background: #fff;
    border-radius: 20rpx;
    font-family: 'PingFang-SC-Heavy';
    padding: 51rpx 30rpx 20rpx 30rpx;
}

.container .number {
    text-align: center;
    color: #333;
    font-size: 40rpx;
    font-weight: bold;
    margin-bottom: 15rpx;
}

.container .text {
    color: #666;
    font-size: 24rpx;
    text-align: center;
}

.up-icon image {
    display: block;
    width: 45rpx;
    height: 45rpx;
    margin: 0 auto;
    margin-top: 20rpx;
}

.salary {
    display: none;
    border-top: 1px solid #f5f5f5;
    padding-top: 30rpx;
    margin-top: 30rpx;
}

.salary .item {
    color: #333;
    font-size: 30rpx;
    font-family: 'PingFang-SC-Medium';
    margin-bottom: 20rpx;
}

.salary .item text {
    font-size: 28rpx;
    color: #666;
}

.bankCardList {
    background: #fff;
    border-radius: 20rpx;
    margin-top: 30rpx;
    box-sizing: border-box;
    padding-left: 30rpx;
}

.bankCardList .title {
    font-size: 30rpx;
    color: #333;
    font-family: 'PingFang-SC-Medium';
    border-bottom: 1px solid #f5f5f5;
    padding: 25rpx 0;
}

.custom-class .van-cell .van-cell__left-icon-wrap .van-icon--image {
    width: 50rpx !important;
    height: 31rpx !important;
}

.list-item {
    display: flex;
    padding: 30rpx 0;
}

.list-item .list-item-l {
    flex: 1;
    display: flex;
    align-items: center;
}

.list-item .list-item-l image {
    display: block;
    width: 50rpx;
    height: 31rpx;
    margin-right: 20rpx;
}

.list-item .list-item-l text {
    font-size: 28rpx;
    color: #666;
}

.list-item .list-item-r {
    padding-right: 30rpx;
}

.tips {
    color: #999;
    font-size: 20rpx;
    font-family: 'PingFang-SC-Medium';
    margin-top: 20rpx;
}

.pay-btn {
    margin-top: 100rpx;
}

.pay-btn image {
    display: block;
    width: 502rpx;
    height: 88rpx;
    margin: 0 auto;
}

.popupCard {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
}

.container-pup {
    width: 548rpx;
    background: #fff;
    padding: 51rpx 30rpx 0rpx 30rpx;
}


.container-pup .title {
    text-align: center;
    font-size: 35rpx;
    color: #000;
    font-weight: 400;
}

.container-pup .images {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 50rpx;
}
.container-pup .images image {
    display: block;
    height: 228rpx;
    width: 200rpx; 
}
.container-pup .desc {
    text-align: center;
    font-size: 35rpx;
    color: #ccc;
    margin-top: 40rpx;
}

.container-pup .btn {
    display: flex;
    height: 101rpx;
    border-top: 1px solid #f5f5f5;
    margin: 0 -30rpx;
    margin-top: 30rpx;
}
.container-pup .btn view {
    flex: 1;
    text-align: center;
    line-height: 101rpx;
    font-size: 35rpx;
}
.container-pup .btn view:last-child {
    border-left: 1px solid #f5f5f5;
}