.nav {
    position: relative;
    height: 45px;
    line-height: 45px;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: #fff;
}

.nav-title {
    height: 45px;
    line-height: 45px;
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 36rpx;
    color: #333;
}

.nav .back {
    position: absolute;
    left: 20rpx;
    top: 50%;
    height: 48rpx;
    bottom: 0;
}
.nav .back image {
    display: block;
    width: 38rpx;
    height: 38rpx;
}

.overflow {
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 20rpx 50rpx 20rpx;
    background: #f6f6f6;
}

.hidden {
    overflow: hidden;
}


.title {
    text-align: center;
    font-size: 30rpx;
    font-family: '微软雅黑';
}
.hidden view {
    margin-bottom: 20rpx;
    font-size: 28rpx;
    font-family: '微软雅黑';
}