.nav {
    position: relative;
    height: 45px;
    line-height: 45px;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: #fff;
}

.nav-title {
    height: 45px;
    line-height: 45px;
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 36rpx;
    color: #000;
}

.nav .back {
    position: absolute;
    left: 20rpx;
    top: 50%;
    height: 48rpx;
    bottom: 0;
}

.nav .back image {
    display: block;
    width: 48rpx;
    height: 48rpx;
}

.overflow {
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 50rpx 30rpx;
    background: #f6f6f6;
}

.hidden {
    overflow: hidden;
}

.img {
    width: 100%;
    margin-top: 100rpx;
}

.img image {
    display: block;
    width: 427rpx;
    height: 326rpx;
    margin: 0 auto;
}

.desc {
    font-size: 30rpx;
    color: #666;
    text-align: center;
    font-family: 'PingFang-SC-Medium';
    margin-top: 100rpx;
    padding: 0 30rpx;
}

.btn {
    margin-top: 100rpx;
}

.btn image {
    display: block;
    width: 502rpx;
    height: 88rpx;
    margin: 0 auto;
}
