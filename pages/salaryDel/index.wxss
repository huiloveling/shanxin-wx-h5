.nav {
    position: relative;
    height: 45px;
    line-height: 45px;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: #fff;
}

.nav-title {
    height: 45px;
    line-height: 45px;
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 36rpx;
    color: #000;
}

.nav .back {
    position: absolute;
    left: 20rpx;
    top: 50%;
    height: 48rpx;
    bottom: 0;
}

.nav .back image {
    display: block;
    width: 38rpx;
    height: 38rpx;
}

.overflow {
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 50rpx 30rpx;
    background: #f6f6f6;
}

.hidden {
    overflow: hidden;
}

.view-list {
    background: #fff;
    border-radius: 15rpx;
    padding: 0 30rpx;
}

.view-list-item {
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1px solid #f5f5f5;
    font-family: 'PingFang-SC-Medium';
    font-weight: 'Medium';
}

.view-list-item text:first-child {
    color: #333;
    font-size: 30rpx;
    font-weight: 400;
}

.view-list-item text:last-child {
    color: #666;
    font-size: 28rpx;
}

.btn {
    margin-top: 150rpx;
}

.btn button {
    background: red;
    color: #fff;
}

.btn image,
.btn view {
    display: block;
    width: 502rpx;
    height: 88rpx;
    margin: 0 auto;
}
.btn view {
    text-align: center;
    line-height: 88rpx;
    background: #F87132;
    color: #fff;
    border-radius: 10rpx;
}