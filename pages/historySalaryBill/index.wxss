.nav {
    position: relative;
    height: 45px;
    line-height: 45px;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: #fff;
}

.nav-title {
    height: 45px;
    line-height: 45px;
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 36rpx;
    color: #000;
}

.nav .back {
    position: absolute;
    left: 20rpx;
    top: 50%;
    height: 48rpx;
    bottom: 0;
}

.nav .back image {
    display: block;
    width: 38rpx;
    height: 38rpx;
}

.overflow {
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 50rpx 30rpx;
    background: #f6f6f6;
}

.hidden {
    overflow: hidden;
}

.tab-container {
    background: #fff;
    display: flex;
}

.tab-container view {
    flex: 1;
    text-align: center;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 33rpx;
    font-family: 'PingFang-SC-Bold';
}

.view-list {
    background: #fff;
}

.view-list .view-list-item {
    padding: 25rpx 30rpx;
    display: flex;
}

.view-list-item-img {
    width: 61rpx;
    margin-right: 20rpx;
}

.view-list-item-img image {
    display: block;
    width: 61rpx;
    height: 61rpx;
}

.view-list-item-desc {
    flex: 1;
    display: flex;
    font-family: 'PingFang-SC-Regular';
}

.view-list-item-desc-left {
    flex: 1;
}

.view-list-item-desc-left view:nth-child(1) {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    line-height: 40rpx;
    margin-bottom: 15rpx;
}

.view-list-item-desc-left view:nth-child(2) {
    font-size: 26rpx;
    color: #666;
    font-weight: Regular;
    margin-bottom: 15rpx;
}

.view-list-item-desc-left view:nth-child(3) {
    font-size: 20rpx;
    color: #999;
    font-weight: Regular;
}

.view-list-item-desc-right {
    flex: 1;
    position: relative;
}

.view-list-item-desc-right .img {
    display: flex;
    justify-content: flex-end;
    padding-right: 10rpx;
}

.view-list-item-desc-right .img image {
    display: block;
    width: 23rpx;
    height: 40rpx;
}

.view-list-item-desc-right .type {
    font-size: 24rpx;
    position: absolute;
    bottom: 0;
    right: 0;
}

.view-list-item-desc-right .type text {
    border: 1px solid #FC9581;
    padding: 5rpx 16rpx;
    border-radius: 40rpx;
    display: inline-block;
    height: 30rpx;
    line-height: 30rpx;
    font-family: '微软雅黑';
    color: #666;
}
